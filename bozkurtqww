ContentFrame.BackgroundTransparency = 1
ContentFrame.Parent = MainFrame

-- Sekme fonksiyonu
local Tabs = {}
local function CreateTab(name)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(0,100,0,35)
	btn.BackgroundColor3 = Color3.fromRGB(60,15,15)
	btn.BackgroundTransparency = 0.3
	btn.Text = name
	btn.TextColor3 = Color3.fromRGB(255,180,50)
	btn.Font = Enum.Font.GothamBold
	btn.TextSize = 16
	btn.Parent = TabFrame

	local corner = Instance.new("UICorner")
	corner.CornerRadius = UDim.new(0,8)
	corner.Parent = btn

	btn.MouseEnter:Connect(function()
		TweenService:Create(btn,TweenInfo.new(0.2),{BackgroundColor3=Color3.fromRGB(255,50,50)}):Play()
	end)
	btn.MouseLeave:Connect(function()
		TweenService:Create(btn,TweenInfo.new(0.2),{BackgroundColor3=Color3.fromRGB(60,15,15)}):Play()
	end)

	local page = Instance.new("Frame")
	page.Size = UDim2.new(1,0,1,0)
	page.BackgroundTransparency = 1
	page.Visible = false
	page.Parent = ContentFrame

	Tabs[name] = page

	btn.MouseButton1Click:Connect(function()
		for k,v in pairs(Tabs) do
			v.Visible = false
		end
		page.Visible = true
	end)

	return page
end

-- Scriptler sekmesi ve callbackler
local ScriptsTab = CreateTab("Scriptler")

local Scripts = {
    {Name = "ðŸš€ Sahte Lag", URL = "https://raw.githubusercontent.com/b0zkurtexe/bozkurtlagscript/refs/heads/main/bozkurtlagscr1pt"},
    {Name = "âš¡ Infinite Yield", URL = "https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"},
    {Name = "ðŸ’¥ Fling Script", URL = "https://raw.githubusercontent.com/b0zkurtexe/fling/refs/heads/main/README.md"},
    {Name = "ðŸ”ª MM2 Xhub", URL = "https://raw.githubusercontent.com/wave-code-top/xhub/refs/heads/main/xhub.lua"},
    {Name = "31", URL = "https://pastefy.app/YZoglOyJ/raw"}
}

local UIGridLayout = Instance.new("UIGridLayout")
UIGridLayout.CellSize = UDim2.new(0,180,0,50)
UIGridLayout.CellPadding = UDim2.new(0,15,0,15)
UIGridLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
UIGridLayout.VerticalAlignment = Enum.VerticalAlignment.Top
UIGridLayout.Parent = ScriptsTab

for i, scriptData in ipairs(Scripts) do
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0,180,0,50)
    btn.BackgroundColor3 = Color3.fromRGB(60,10,10)
    btn.BackgroundTransparency = 0.3
    btn.Text = scriptData.Name
    btn.TextColor3 = Color3.fromRGB(255,180,50)
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 18
    btn.Parent = ScriptsTab

    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0,12)
    corner.Parent = btn

    btn.MouseEnter:Connect(function()
        TweenService:Create(btn, TweenInfo.new(0.2), {BackgroundColor3=Color3.fromRGB(255,50,50)}):Play()
    end)
    btn.MouseLeave:Connect(function()
        TweenService:Create(btn, TweenInfo.new(0.2), {BackgroundColor3=Color3.fromRGB(60,10,10)}):Play()
    end)

    btn.MouseButton1Click:Connect(function()
        if scriptData.URL ~= "" then
            loadstring(game:HttpGet(scriptData.URL))()
        else
            print(scriptData.Name.." iÃ§in URL eklenmedi!")
        end
    end)
end
