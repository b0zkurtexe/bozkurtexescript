local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")

-- Ana ScreenGui
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Parent = game:GetService("CoreGui")
ScreenGui.ResetOnSpawn = false

-----------------------------------------------------
-- A√ßƒ±lƒ±≈ü Ekranƒ± (Zoom + Fade)
-----------------------------------------------------
local IntroFrame = Instance.new("Frame")
IntroFrame.Size = UDim2.new(0, 400, 0, 200)
IntroFrame.Position = UDim2.new(0.5, -200, 0.5, -100)
IntroFrame.AnchorPoint = Vector2.new(0.5,0.5)
IntroFrame.BackgroundColor3 = Color3.fromRGB(15,15,25)
IntroFrame.BackgroundTransparency = 1
IntroFrame.Parent = ScreenGui

local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1,0,1,0)
Title.BackgroundTransparency = 1
Title.Text = "‚ùÑÔ∏è ayzxs Hizmeti ‚ùÑÔ∏è"
Title.TextColor3 = Color3.fromRGB(255,255,255)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 48
Title.TextTransparency = 1
Title.Parent = IntroFrame

-- Havalƒ± animasyon
TweenService:Create(IntroFrame, TweenInfo.new(0.8, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {Size=UDim2.new(0,500,0,250), BackgroundTransparency=0.15}):Play()
TweenService:Create(Title, TweenInfo.new(1, Enum.EasingStyle.Quad), {TextTransparency=0}):Play()
wait(2)
TweenService:Create(IntroFrame, TweenInfo.new(0.6), {BackgroundTransparency=1, Size=UDim2.new(0,400,0,200)}):Play()
TweenService:Create(Title, TweenInfo.new(0.6), {TextTransparency=1}):Play()
wait(0.7)
IntroFrame:Destroy()

